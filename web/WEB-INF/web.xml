    <servlet-mapping>
        <servlet-name>leavetypes</servlet-name>
        <url-pattern>/leavetypes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>leaverequests</servlet-name>
        <url-pattern>/leaverequests</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CRUDController</servlet-name>
        <url-pattern>/CRUDController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            15
        </session-timeout>
    </session-config>
</web-app>
